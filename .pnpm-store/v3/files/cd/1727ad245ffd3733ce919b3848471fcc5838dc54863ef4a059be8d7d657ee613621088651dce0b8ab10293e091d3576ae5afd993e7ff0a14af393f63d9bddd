{"version":3,"file":"utils.js","names":["indentString","string","replace","formatErrorDetails","errorDetails","Array","from","entries","map","name","details","toString","join","pathToArray","path","flattened","curr","push","key","prev","reverse"],"sources":["../../src/query/utils.ts"],"sourcesContent":["import { Path } from \"graphql/jsutils/Path\"\n\nexport const indentString = (string: string): string =>\n  string.replace(/\\n/g, `\\n  `)\n\nexport const formatErrorDetails = (errorDetails: Map<string, any>): string =>\n  Array.from(errorDetails.entries())\n    .map(\n      ([name, details]) => `${name}:\n  ${indentString(details.toString())}`\n    )\n    .join(`\\n`)\n\nexport function pathToArray(path: Path | undefined): Array<string | number> {\n  const flattened: Array<string | number> = []\n  let curr: Path | undefined = path\n  while (curr) {\n    flattened.push(curr.key)\n    curr = curr.prev\n  }\n  return flattened.reverse()\n}\n"],"mappings":";;;;;AAEO,MAAMA,YAAY,GAAIC,MAAc,IACzCA,MAAM,CAACC,OAAO,CAAC,KAAK,EAAG,MAAK,CAAC;AAAA;AAExB,MAAMC,kBAAkB,GAAIC,YAA8B,IAC/DC,KAAK,CAACC,IAAI,CAACF,YAAY,CAACG,OAAO,EAAE,CAAC,CAC/BC,GAAG,CACF,CAAC,CAACC,IAAI,EAAEC,OAAO,CAAC,KAAM,GAAED,IAAK;AACnC,IAAIT,YAAY,CAACU,OAAO,CAACC,QAAQ,EAAE,CAAE,EAAC,CACjC,CACAC,IAAI,CAAE,IAAG,CAAC;AAAA;AAER,SAASC,WAAW,CAACC,IAAsB,EAA0B;EAC1E,MAAMC,SAAiC,GAAG,EAAE;EAC5C,IAAIC,IAAsB,GAAGF,IAAI;EACjC,OAAOE,IAAI,EAAE;IACXD,SAAS,CAACE,IAAI,CAACD,IAAI,CAACE,GAAG,CAAC;IACxBF,IAAI,GAAGA,IAAI,CAACG,IAAI;EAClB;EACA,OAAOJ,SAAS,CAACK,OAAO,EAAE;AAC5B"}