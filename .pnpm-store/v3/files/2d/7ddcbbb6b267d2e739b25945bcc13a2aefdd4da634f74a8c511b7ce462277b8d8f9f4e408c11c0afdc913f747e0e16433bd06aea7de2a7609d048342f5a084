{"version":3,"file":"ensure-file-content.js","names":["ensureFileContent","file","data","previousContent","undefined","readFile","e","outputFile"],"sources":["../../src/utils/ensure-file-content.ts"],"sourcesContent":["import { outputFile, readFile } from \"fs-extra\"\n\nexport async function ensureFileContent(\n  file: string,\n  data: any\n): Promise<boolean> {\n  let previousContent: string | undefined = undefined\n  try {\n    previousContent = await readFile(file, `utf8`)\n  } catch (e) {\n    // whatever throws, we'll just write the file\n  }\n\n  if (previousContent !== data) {\n    await outputFile(file, data)\n    return true\n  }\n\n  return false\n}\n"],"mappings":";;;;AAAA;AAEO,eAAeA,iBAAiB,CACrCC,IAAY,EACZC,IAAS,EACS;EAClB,IAAIC,eAAmC,GAAGC,SAAS;EACnD,IAAI;IACFD,eAAe,GAAG,MAAM,IAAAE,iBAAQ,EAACJ,IAAI,EAAG,MAAK,CAAC;EAChD,CAAC,CAAC,OAAOK,CAAC,EAAE;IACV;EAAA;EAGF,IAAIH,eAAe,KAAKD,IAAI,EAAE;IAC5B,MAAM,IAAAK,mBAAU,EAACN,IAAI,EAAEC,IAAI,CAAC;IAC5B,OAAO,IAAI;EACb;EAEA,OAAO,KAAK;AACd"}